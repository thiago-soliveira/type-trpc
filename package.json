{
  "name": "trpc-routing-controllers",
  "version": "0.1.0",
  "description": "Decorators and class-based routing for tRPC v10",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "@trpc/server": "^10.0.0",
    "zod": "^3.23.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0",
    "@trpc/server": "^10.0.0",
    "zod": "^3.23.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/trpc-routing-controllers.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/trpc-routing-controllers/issues"
  },
  "homepage": "https://github.com/your-org/trpc-routing-controllers#readme"
}
